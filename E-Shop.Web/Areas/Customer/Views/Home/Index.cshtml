@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IEnumerable<Product>
@{
    //Layout = "_Customer";
    //Layout = "~/Views/Shared/_Customer.cshtml";


}
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="~/@item.Img" alt="..." width="450" height="300" />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@item.Name</h5>
                                <!-- Product price-->
                                $@item.Price
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-controller="home" asp-action="details" asp-area="customer" asp-route-ProductId="@item.Id">View Details</a></div>
                        </div>
                    </div>
                </div>

            }


        </div>
    
        

        @if (Model.Count()>0)
        {
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }),
                             new PagedListRenderOptions
                {
                    LiElementClasses = new string[] { "page-item" },
                    PageClasses = new string[] { "page-link" }
                })
                </div>
            </div>

        }

    </div>
</section>