@model IEnumerable<Category>
@{
    ViewBag.PageTitle = "Category Mangement";
    ViewBag.CardTitle = "Browse Category ";
    Layout = "~/Views/Shared/_Dashboard.cshtml";

}
@*<partial name="_toaster"/>*@
<div>
    @* <a href="/Admin/category/create" class="btn btn-primary"> Create</a> *@
    <a asp-action="Create" class="btn btn-primary"> Create</a>
</div>


<br />
<table id='tblList' class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Date Created</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CreatedDate</td>
                <td>
                    @* <a href="/Admin/category/edit/@item.Id" class="btn btn-success">Edit </a> *@
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"> <i class="bi bi-check-circle">Edit</i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="bi bi-exclamation-octagon">Delete</i>
                    </a>
                    @* <a href="/Admin/category/Delete/@item.Id" class="btn btn-danger">Delete </a> *@
                </td>

            </tr>
        }
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<link type="text/css" rel="stylesheet" href="https://cdn.datatables.net/2.0.5/css/dataTables.dataTables.css" />
<script type="text/javascript" src="https://cdn.datatables.net/2.0.5/js/dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true)
    js(document).ready(function () {
        js('#tblList').DataTable({

        });
    })
</script>



